pipeline {
    agent any

    stages {
        stage("Clone project") {
            steps {
                git branch: 'master', url: 'https://github.com/AhmedEnnaime/KingsLeague.git'
            }
        }

        stage("Build project without test") {
            steps {
                dir("../KingsLeague") {
                    sh './gradlew build -x test'
                }
            }
        }
        // stage("Testing") {
